    function showResult(fr, label) {
        var markup, result, n, aByte, byteStr;

        markup = [];
        markup1 = [];
        result = fr.result;
        for (n = 0; n < result.length; ++n) {
            aByte = result.charCodeAt(n);
            byteStr = aByte.toString(16); // 16 - the number will show as an hexadecimal value
            if (byteStr.length < 2) {
